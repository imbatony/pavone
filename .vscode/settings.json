{
    "python.defaultInterpreterPath": "./venv/Scripts/python.exe",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoSearchPaths": true,
    "python.analysis.extraPaths": [
        ".",
        "./pavone"
    ],
    "python.analysis.include": [
        "pavone/**",
        "tests/**"
    ],
    "python.analysis.exclude": [
        "**/__pycache__",
        ".venv",
        "venv",
        "build",
        "dist",
        "*.egg-info"
    ],
    "python.analysis.stubPath": "typings",
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.useLibraryCodeForTypes": true,    "python.analysis.completeFunctionParens": true,
    "python.formatting.provider": "none",
    "python.formatting.autopep8Enabled": false,
    "python.formatting.blackEnabled": false,
    "python.formatting.yapfEnabled": false,
    "editor.formatOnSave": false,
    "editor.formatOnType": false,
    "editor.formatOnPaste": false,
    "[python]": {
        "editor.formatOnSave": false,
        "editor.formatOnType": false,
        "editor.formatOnPaste": false,
        "editor.defaultFormatter": "mikoz.black-py"
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        ".pytest_cache": true,
        "build/": true,
        "dist/": true,
        "*.egg-info/": true
    },
    "files.encoding": "utf8",
    "terminal.integrated.env.windows": {
        "PYTHONIOENCODING": "utf-8"
    },
    "terminal.integrated.shellArgs.windows": ["-NoExit", "-Command", "chcp 65001"]
}
